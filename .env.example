# TripCompare API Configuration
# Copy this to .env and fill in your values

# App Settings
APP_NAME=TripCompare API
APP_VERSION=1.0.0
DEBUG=True

# Database (SQLite by default, no config needed)
DATABASE_URL=sqlite:///./tripcompare.db

# Affiliate API Keys
# Get these from your affiliate program dashboards

# Travelpayouts (flights, hotels via Skyscanner, Booking.com)
# Sign up: https://www.travelpayouts.com/
TRAVELPAYOUTS_TOKEN=your_token_here
TRAVELPAYOUTS_MARKER=your_marker_here

# Booking.com Direct Affiliate
# Sign up: https://www.booking.com/affiliate-program/
BOOKING_AFFILIATE_ID=your_aid_here

# GetYourGuide (tours & experiences)
# Sign up: https://partner.getyourguide.com/
GETYOURGUIDE_PARTNER_ID=your_partner_id_here

# Email Marketing (Brevo/Sendinblue)
# Sign up: https://www.brevo.com/
BREVO_API_KEY=your_api_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
